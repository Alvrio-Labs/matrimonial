{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "no-undef": "error",
        "semi": "error",
        "semi-spacing": "error",
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "req|res|next|__|Sequelize|models|process.env."
            }
        ],
        "indent": [
            "error",
            2
        ],
        "no-mixed-spaces-and-tabs": "warn",
        "space-before-blocks": "error",
        "space-in-parens": "error",
        "space-infix-ops": "error",
        "space-unary-ops": "error",
        "quotes": [
            "error",
            "single"
        ],
        "keyword-spacing": "error",
        "multiline-ternary": [
            "error",
            "never"
        ],
        "no-mixed-operators": "error",
        //
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 2,
                "maxEOF": 1
            }
        ],
        //* ES6
        "arrow-spacing": "error",
        "no-confusing-arrow": "error",
        "no-duplicate-imports": "error",
        "no-var": "error",
        "object-shorthand": "off",
        "prefer-const": "error",
        "prefer-template": "warn"
    }
}